<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StartWindowController">
   <children>
      <Button fx:id="startGame" layoutX="682.0" layoutY="444.0" mnemonicParsing="false" onAction="#startGame" text="Let´s go!" />
      <Label fx:id="enterNameLabel" layoutX="601.0" layoutY="243.0" prefHeight="37.0" prefWidth="115.0" text="Enter your name, hon" />
      <TextField fx:id="nameTextfield" layoutX="590.0" layoutY="280.0" prefHeight="26.0" prefWidth="185.0" promptText="type, type, type" styleClass="nameTextCSS" />
      <Label fx:id="levelLabel" layoutX="89.0" layoutY="253.0" text="What´s your level?" />
      <RadioButton fx:id="radioButtonLevel1" layoutX="81.0" layoutY="284.0" mnemonicParsing="false" onAction="#easy" text="Easy Peasy">
         <toggleGroup>
            <ToggleGroup fx:id="level" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="radioButtonLevel2" layoutX="81.0" layoutY="313.0" mnemonicParsing="false" onAction="#ok" text="Okay, I guess" toggleGroup="$level" />
      <RadioButton fx:id="radioButtonLevel3" layoutX="81.0" layoutY="340.0" mnemonicParsing="false" onAction="#hard" text="WTF is this?" toggleGroup="$level" />
   </children>
</AnchorPane>
